<%= render 'shared/errors', obj: @category %>
<div class="justify-content-center row mt-4 form-label">
  <%= form_with(model: @category, data: { turbo: false }, local: true) do |f| %>
    <div class="mb-4 form-group row">
      <label for="formGroupExampleInput" class="form-label mb-0">
        <%= f.label :name, "Category name" %><br/>
      </label>
      <div>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="d-flex justify-content-center ">
      <%= f.submit class:"btn btn-form-save p-2 col-3 " %>
    </div>
    <div class="d-flex justify-content-center p-2">
      <%= link_to '[ Cancel and return to categories listing ]', categories_path, class:"btn btn-form-cancel text-secondary" %>
    </div>
  <% end %>
</div>
