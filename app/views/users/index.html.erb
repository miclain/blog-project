<h2 class="text-center mt-4">Alpha Bloggers</h2>

<div class="flickr_pagination mt-4">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-center">
      <div class="mt-4 col-8">
        <div class="card shadow mb-5 bg-body rounded">
          <div class="card-header text-center">
            <%= link_to user.username.capitalize(), user_path(user), class: "text-secondary fw-bold" %>
          </div>
          <div class="card-body text-center">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 150), user %>
            </h5>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <%= link_to 'View profile', user, class:"btn btn-outline-success" %>
            <% if logged_in? %>
              <% if user == current_user %>
                <%= link_to 'Edit profile', edit_user_path(user), class:"btn btn-outline-info" %>
              <% end %>
              <% if current_user.admin? %>
                <%= link_to 'Delete user', user_path(user), 
                data: { "turbo-method": :delete, 
                "turbo-confirm": "Are you sure you want to delete the user account and all associated articles?"}, 
                class:"btn btn-outline-danger" %>
              <% end %>
            <% end %>
          </div>
          <div class="card-footer text-muted text-center">
            <small class="card-text">
              Joined <%= time_ago_in_words(user.created_at) %> ago
            </small>
          </div>
        </div>
      </div>  
    </div>
  <% end %>
</div>

<div class="flickr_pagination mb-3">
  <%= will_paginate @users, :container => false %>
</div>
