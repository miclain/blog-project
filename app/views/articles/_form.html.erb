<div class="container ">
  <%= render 'shared/errors', obj: @article %>
  <div class="justify-content-center row mt-4">
    <%= form_with(model: @article, data: { turbo: false }, local: true) do |f| %>
      <div class="mb-4 form-group row">
        <label for="formGroupExampleInput" class="form-label">
          <%= f.label :title %><br/>
        </label>
        <div>
          <%= f.text_field :title, class: "form-control", placeholder: "Title of the article" %>
        </div>
      </div>

      <div class="mb-4 form-group row">
        <label for="formGroupExampleInput2" class="form-label">
          <%= f.label :description %><br/>
        </label>
        <div>
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of the article" %>
        </div>
      </div >

      <div class="mb-4 form-group row m-0">
        <label for="formGroupExampleInput2" class="form-label">
          <%= f.label :category %><br/>
        </label>
        <div class="form-control">
          <%= collection_check_boxes(:article, :category_ids, Category.all, :id, :name, { multiple: true }) do |b| %>
            <div class="btn">
              <%= b.label(:"data-value" => b.value) { b.check_box + " " + b.text } %>
            </div >
          <% end %>
        </div >
      </div >

      <div class="d-flex justify-content-center">
        <%= f.submit class:"btn btn-form-save p-2 col-3 " %>
      </div>
      <div class="d-flex justify-content-center p-2">
        <%= link_to '[ Cancel and Return to articles listing ]', articles_path, class:"btn btn-form-cancel text-secondary" %>
      </div>
    <% end %>
  </div>
</div>
